{
    "$schema": "../config.schema.json",
    "description": "Configuration for movement controls",
    "maps": {
        "br": {
            "$comment": "Set speed to half",
            "mode": "TRIGGER",
            "action": "MOTOR_SPEED_HALF"
        },
        "bl": {
            "$comment": "Set speed to full",
            "mode": "TRIGGER",
            "action": "MOTOR_SPEED_FULL"
        },
        "sr": {
            "$comment": "x/y = lateral movement",
            "mode": "ONE_TO_ONE_AXES",
            "action": "MOVEMENT"
        },
        "sl": {
            "$comment": "x axis = yaw rotation",
            "mode": "SPLIT_AXES",
            "axisMaps": [
                {
                    "targetAction": "ROTATION",
                    "targetAxis": 0,
                    "mode": "OFFSET"
                }
            ]
        }
    }
}